<!-- Table.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Grapher.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Grapher.Views.Table"
             x:DataType="viewModels:GraphPointViewModel">

    <ListBox Name="graphPointListBox" ItemsSource="{Binding Points}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <!-- Bind the TextBoxes to X and Y properties -->
                    <TextBox Text="{Binding X, Mode=TwoWay}" />
                    <TextBox Text="{Binding Y, Mode=TwoWay}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>